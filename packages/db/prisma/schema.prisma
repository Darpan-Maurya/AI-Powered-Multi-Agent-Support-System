generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* Conversations */
model Conversation {
  id        String    @id @default(uuid())
  userId    String
  createdAt DateTime  @default(now())
  messages  Message[]
}

/* Messages */
model Message {
  id             String   @id @default(uuid())
  conversationId String
  role           String
  content        String
  agentType      String?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])
}

/* Orders */
model Order {
  id         String  @id
  userId     String
  status     String
  trackingId String?
}

/* Payments */
model Payment {
  id      String  @id
  orderId String
  status  String
  amount  Float
}
